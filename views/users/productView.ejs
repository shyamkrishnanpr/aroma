
<%-include('../layouts/header') %>

<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="d-block w-100"  src="/<%=product.image[0].path%>" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100 " src="/<%=product.image[1].path%>" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="/<%=product.image[2].path%>" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon text-danger" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only" >Next</span>
                    </a>
                  </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3><%=product.name %></h3>
                    <h2><span>&#8377 </span><%= product.price  %></h2>
                    <ul class="list">
                        <li><a class="active" href="#"><span>Category</span>: <%=product?.category?.name %></a></li>
                        <!-- <li><a href="#"><span>Availibility</span> : In Stock</a></li> -->
                    </ul>
                    <p><%=product.description %></p>
            
                    <button class="button primary-btn" onclick="addToCart('<%= product._id %>')">Add to Cart</button>

                    <div class="card_area d-flex align-items-center">
                        <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--================End Single Product Area =================-->


    <!-- ================ trending product section start ================= -->  
    <section class="section-margin calc-60px">
        <div class="container">
          <div class="section-intro pb-60px">
           
            <h2>Similar <span class="section-intro__style">Products</span></h2>
          </div>
          <div class="row">
            <% similar.slice(0,4).forEach((product)=>{%>
              <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-center card-product">
                  <div class="card-product__img">
                    <a href="/productView/<%=product._id%>" ><img class="card-img" src="/<%=product.image[0].path %>" alt=""></a>
                    
                  </div>
                  <div class="card-body">
                    <p></p>
                    <h4 class="card-product__title"><a href="/productView/<%=product._id%>"><%=product.name %></a></h4>
                    <p class="card-product__price"><span>&#8377 </span><%=product.price %></p>
                  </div>
                </div>
              </div>
           
              <%
          }) %>
    
          </div>
        </div>
      </section>
      <!-- ================ trending product section end ================= -->  









<%-include('../layouts/footer') %>