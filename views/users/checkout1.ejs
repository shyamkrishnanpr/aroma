<%-include('../layouts/header') %>

<section class="checkout_area section_gap">
    <div class="row justify-content-right">
      <div class="col-xl-6 ">
        <!-- Address edit -->
        <section class="">
          <form id="placeOrder">
            <div class="container">
              <div class="col-xl-12">
                <div class="row justify-content-center">
                  

                  <div class="col-md-6 ">
                    <div class="shipping-section">
                      <div class="form-group">
                        <label for="country">Select Shipping Address</label>
                        <div class="default-select">
                          <select required aria-placeholder="select your address" class="form-control form-select mt-2" style="color: #000" onchange="updateAddressDetails(this.value)">
                            <% if (userData.addressDetail &&
                            userData.addressDetail.length> 0) { %> <% for (let
                            i=0; i < userData.addressDetail.length; i++) { %>
                            <option value="<%=userData.addressDetail[i]._id%>">
                              <%=userData.addressDetail[i].housename%>
                              <%=userData.addressDetail[i].postoffice%>
                              <%=userData.addressDetail[i].area%>
                            </option>
                            <% } %> <% } else { %>
                            <p>No address selected</p>
                            <% } %>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="row align-items-end">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="firstname">Phone number</label>
                        <input type="text" required name="phone" id="phone" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder=""  />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="firstname">House Name</label>
                        <input type="text" required name="housename" id="housename" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="ib393" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="lastname">Area</label>
                        <input type="text" required id="area" name="area" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="4xtq1b" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="streetaddress">Land Mark</label>
                        <input type="text" required id="landmark" name="landMark" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="iwf96m" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="streetaddress">District</label>
                        <input type="text" required id="district" name="district" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="4xtq1b" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="towncity">State</label>
                        <input type="text" required id="state" name="state" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid=" 4iwr3" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="postcodezip">Post Office</label>
                        <input type="text" required id="postoffice" name="postOffice" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="y5r53" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phone">Pincode</label>
                        <input type="text" required id="pincode" name="pincode" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="w97al9" />
                      </div>
                    </div>

                    <div class="container d-flex">
                      <div class="form-group mt-5">
                        <h6>Have coupon? Apply here!</h6>
                        <div class="input-group">
                          <input type="text" class="form-control coupon" name="coupon" placeholder="Coupon code" />
                          <span class="input-group-append"></span>
                        </div>
                      </div>
                    </div>


                  </div>
             </div>

                </div>
        </div>
              </div>
            </form>
            <div class="col-xl-6">



              <div class="row mt-5 pb-5 d-flex">
              <div class="col-md-6">
                <div class="cart-detail cart-total p-3 p-md-4" style="border-color: blue; border-block-width: 10px;">
                  <h3 class="billing-heading mb-4">Order Summary</h3>
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% productData.forEach(function(product) {%> <% var
                      a=product.productDetail.price%> <% var
                      b=product.productQuantity%> <% var c=a*b %>
                      <tr>
                        <td><%=product.productDetail.name%></td>
                        <td><%=product.productQuantity%></td>
                        <td><%=c%> ₹</td>
                      </tr>
                      <% }) %>
                      <tr>
                        <td colspan="2">Total Amount:</td>
                        <td><%=sum%> ₹</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="col-md-6">
                <div class="cart-detail p-3 p-md-4" >
                  <h3 class="billing-heading mb-4">Payment Method</h3>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="COD" name="paymentMethod" class="mr-2" required />
                          COD (cash on delivery)</label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="Online" name="paymentMethod" class="mr-2" checked required />Online</label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="Wallet" name="paymentMethod" class="mr-2" required />Wallet</label>
                      </div>
                    </div>
                  </div>

                  
                  <button style="border: none" class="genric-btn primary circle arrow" type="submit" value="submit">
                    Place an Order
                  </button>
                </div>
              </div>
              </div>

             
            </div>
          </form>
        </section>
      </div>
    </div>








              </div>



  </section>

<%-include('../layouts/footer') %>